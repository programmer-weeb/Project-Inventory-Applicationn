extends layout

block content

    h1=title
    h2=itemName
    p price
    p= itemPrice
    p Description
    p= itemDescription
    p Category
    p=itemCategory

    // Create a form for the delete button
    form(action=`/item/${itemId}/delete`, method='POST')
            input(type='hidden', name='_method', value='DELETE', id=itemId)
            button(type='submit') Delete