extends layout

block content

    h1=title

    form(action="", method="post")
        Label Name
            br
            input(type="text", name="name" required minlength="1" maxlength="50" autocomplete="off")
        br
        Label Description
            br
            input(type="text", name="description" maxlength="200" autocomplete="off")
        br
        Label Category
            br
            select(name="category" required)
                each category in categories
                    option(value=category._id) #{category.name}
        br


        Label Price
            br
            input(type="number", name='price' required minlength='1')
        br
        input(type="submit", value="Create")